<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:overScrollMode="never">
            <ImageView android:id="@+id/ptBackgroundImageRight" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never"/>
            <ImageView android:id="@+id/ptBackgroundImageLeft" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never"/>
        </FrameLayout>
        <ImageView android:id="@+id/ivPlaceHolder" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
        <View android:id="@+id/vMask" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never"/>
    </FrameLayout>
    <SeekBar android:id="@+id/ptSeekBar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:max="10000" android:progressDrawable="@drawable/drawable_seek_bar"/>
</FrameLayout>
